{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "command": "pnpm install",
      "name": "Installing Dependencies"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "dev": {
      "name": "dev",
      "command": "pnpm dev",
      "runAtStart": true
    },
    "build": {
      "name": "build",
      "command": "pnpm build",
      "runAtStart": false
    },
    "start": {
      "name": "start",
      "command": "pnpm start",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint",
      "runAtStart": false
    },
    "type-check": {
      "name": "type-check",
      "command": "pnpm type-check",
      "runAtStart": false
    },
    "test": {
      "name": "test",
      "command": "pnpm test",
      "runAtStart": false
    },
    "test:watch": {
      "name": "test:watch",
      "command": "pnpm test:watch",
      "runAtStart": false
    },
    "test:coverage": {
      "name": "test:coverage",
      "command": "pnpm test:coverage",
      "runAtStart": false
    },
    "test:integration": {
      "name": "test:integration",
      "command": "pnpm test:integration",
      "runAtStart": false
    },
    "test:unit": {
      "name": "test:unit",
      "command": "pnpm test:unit",
      "runAtStart": false
    },
    "test:security": {
      "name": "test:security",
      "command": "pnpm test:security",
      "runAtStart": false
    },
    "test:e2e": {
      "name": "test:e2e",
      "command": "pnpm test:e2e",
      "runAtStart": false
    },
    "test:all": {
      "name": "test:all",
      "command": "pnpm test:all",
      "runAtStart": false
    }
  }
}
